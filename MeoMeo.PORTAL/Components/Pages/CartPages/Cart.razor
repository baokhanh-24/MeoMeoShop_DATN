    private decimal CalculateOrderTotal()
    {
        if (cart?.Items == null || !cart.Items.Any())
            return 0;

        return cart.Items.Sum(item =>
        {
            var discount = item.Discount;
            var priceAfterDiscount = discount > 100
                ? item.Price - discount
                : item.Price * (1 - discount / 100f);
            return (decimal)(priceAfterDiscount * item.Quantity);
        });
    }

    private async Task FetchImageAsync()
    {
        if (string.IsNullOrEmpty(AccountNumber) || string.IsNullOrEmpty(BankBin))
        {
            QrErrorMessage = "Thiếu thông tin tài khoản ngân hàng";
            return;
        }

        IsGeneratingQr = true;
        QrErrorMessage = null;
        QrBase64Image = null;
        
        try
        {
            var url = $"https://img.vietqr.io/image/{BankBin}-{AccountNumber}-qr_only.png?amount={(int)FinalTotalAmount}&addInfo={AddInfo}";
            
            var imageBytes = await ApiCaller.GetByteArrayAsync(url);
            
            if (imageBytes != null && imageBytes.Length > 0)
            {
                QrBase64Image = $"data:image/png;base64,{Convert.ToBase64String(imageBytes)}";
                QrErrorMessage = null;
            }
            else
            {
                QrErrorMessage = "Không thể tạo mã QR";
            }
        }
        catch (Exception ex)
        {
            QrErrorMessage = $"Lỗi tạo mã QR: {ex.Message}";
            Console.WriteLine($"Error fetching QR code: {ex.Message}");
        }
        finally
        {
            IsGeneratingQr = false;
        }
    }

