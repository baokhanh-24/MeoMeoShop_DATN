                    MessageModalService.Warning($"Đã tự động điều chỉnh về {maxQuantity} sản phẩm (còn {inventoryLimit} sản phẩm trong kho).");
                }
                // Tự động reset về số lượng tối đa có thể mua
                await UpdateQuantity(item, maxQuantity);
            }
        }
    }

