    private async Task SearchVoucher()
    {
        try
        {
            // Tính tổng tiền đơn hàng hiện tại
            var orderAmount = CalculateOrderTotal();

            if (!string.IsNullOrWhiteSpace(VoucherSearchCode))
            {
                // Tìm kiếm voucher theo code cụ thể
                var checkRequest = new CheckVoucherRequestDTO
                {
                    Code = VoucherSearchCode,
                    OrderAmount = orderAmount,
                    CustomerId = null // Backend sẽ lấy từ JWT token
                };

                var checkResult = await VoucherClient.CheckVoucherAsync(checkRequest);

                if (checkResult.ResponseStatus == BaseStatus.Success)
                {
                    // Convert CheckVoucherResponseDTO sang VoucherDTO
                    AvailableVouchers = new List<VoucherDTO>
                    {
                        new VoucherDTO
                        {
                            Id = checkResult.Id,
                            Code = checkResult.Code,
                            Discount = checkResult.Discount,
                            MinOrder = checkResult.MinOrder,
                            MaxDiscount = checkResult.MaxDiscount,
                            Type = checkResult.DiscountPercent > 0 ? EVoucherType.byPercentage : EVoucherType.byFixedAmount,
                            StartDate = DateTime.Now, // Không có trong response
                            EndDate = checkResult.ExpiryDate
                        }
                    };
                }
                else
                {
                    MessageModalService.Warning(checkResult.Message ?? "Voucher không hợp lệ");
                    AvailableVouchers = new List<VoucherDTO>();
                }
            }
            else
            {
                // Nếu không có code tìm kiếm, load tất cả voucher khả dụng
                await LoadAvailableVouchers();
            }
        }
        catch (Exception ex)
        {
            MessageModalService.Error($"Lỗi khi tìm kiếm voucher: {ex.Message}");
            AvailableVouchers = new List<VoucherDTO>();
        }
    }

