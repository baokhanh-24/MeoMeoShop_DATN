    private async Task Increment(CartDetailItemDTO item)
    {
        var maxQuantity = GetMaxPurchasableQuantity(item);
        if (item.Quantity < maxQuantity)
        {
            await UpdateQuantity(item, item.Quantity + 1);
        }
        else
        {
            // Nếu đã đạt giới hạn, tự động reset về số lượng tối đa
            if (item.Quantity > maxQuantity)
            {
                await UpdateQuantity(item, maxQuantity);
            }
            
            var inventoryLimit = item.InventoryQuantity ?? 0;
            var maxBuyLimit = item.MaxBuyPerOrder ?? int.MaxValue;
            
            if (maxBuyLimit != int.MaxValue && maxBuyLimit > 0 && inventoryLimit > maxBuyLimit)
            {
                MessageModalService.Warning($"Đã đạt giới hạn mua hàng: {maxBuyLimit} sản phẩm.");
            }
            else
            {
                MessageModalService.Warning($"Đã đạt giới hạn: {maxQuantity} sản phẩm (còn {inventoryLimit} sản phẩm trong kho).");
            }
        }
    }

    private async Task Decrement(CartDetailItemDTO item)
    {
        if (item.Quantity <= 1)
        {
            await RemoveItem(item.Id);
        }
        else
        {
            await UpdateQuantity(item, item.Quantity - 1);
        }
    }

    private async Task OnQuantityChange(CartDetailItemDTO item, int? newQuantity)
    {
        if (newQuantity.HasValue && newQuantity.Value >= 1)
        {
            var maxQuantity = GetMaxPurchasableQuantity(item);
            if (newQuantity.Value <= maxQuantity)
            {
                await UpdateQuantity(item, newQuantity.Value);
            }
            else
            {
                
                var inventoryLimit = item.InventoryQuantity ?? 0;
                var maxBuyLimit = item.MaxBuyPerOrder ?? int.MaxValue;
                
                if (maxBuyLimit != int.MaxValue && maxBuyLimit > 0 && inventoryLimit > maxBuyLimit)
                {
                    MessageModalService.Warning($"Đã tự động điều chỉnh về {maxQuantity} sản phẩm (giới hạn mua hàng: {maxBuyLimit}).");
                }
                else
