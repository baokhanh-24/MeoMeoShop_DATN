@inherits LayoutComponentBase

<div class="login-layout">
    @Body
</div>

<style>
    .login-layout {
        min-height: 100vh;
        width: 100vw;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Reset any inherited styles */
