@using Microsoft.AspNetCore.Components.Authorization
@using MeoMeo.CMS.Utilities
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject ILogger<AutoRefreshToken> Logger

@code {
    protected override async Task OnInitializedAsync()
    {
        try
        {
            Logger.LogInformation("AutoRefreshToken: Checking authentication state on page load");

            if (AuthStateProvider is CMSAuthStateProvider cmsAuthProvider)
            {
                // Thử refresh token nếu cần
                var refreshSuccess = await cmsAuthProvider.TryRefreshTokenAsync();
                if (!refreshSuccess)
                {
                    Logger.LogWarning("AutoRefreshToken: Token refresh failed, redirecting to login");
                    Navigation.NavigateTo("/cms/login", forceLoad: true);
                }
                else
                {
                    Logger.LogInformation("AutoRefreshToken: Token refresh successful");
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "AutoRefreshToken: Error during token refresh");
            Navigation.NavigateTo("/cms/login", forceLoad: true);
        }
    }
}
